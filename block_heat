blueprint:
  name: Block heat
  description: This blueprints uses the nordpool integration and lets you choose howe
    many hours you wil define as expesive, and make omhass block temperature based on that information.
  domain: automation
  input:
    grid_area:
      name: Grid area sensor
      description: This is your grid area sensor
      selector:
        entity:
          domain:
          - sensor
          integration: nordpool
          multiple: false
    expensive_hours:
      name: Expensive hours
      description: numbers of Expensive hours to block
      default: 12
      selector:
        number:
          min: 0.0
          max: 24.0
          mode: slider
          step: 1.0
    temperature_sensor:
      name: Temp sensor
      description: here you select your outside temperature sensor
      selector:
        entity:
          domain: 
          - sensor
          device_class:
          - temperature
          multiple: false
    Ohmonhass_sensor:
      name: ohmonhass
      description: your ohmonhass
      selector:
        entity:
          domain: 
          - number
          integration: mqtt
          multiple: false
    expensive:
      name: Expensive
      description: Action to run on expensive
      default: []
      selector:
        action: {}
    cheap:
      name: Cheap
      description: Action to run on cheap
      default: []
      selector:
        action: {}
  source_url: https://github.com/anhelgesen/Blueprints/blob/main/Nordpool_price.yaml
variables:
  grid_area_var: !input grid_area
  expensive_hours_var: !input expensive_hours
trigger:
- platform: state
  entity_id: !input grid_area
action:
- choose:
  - conditions:
    - condition: template
      value_template: '{{ (state_attr(grid_area_var,''today'')|sort)[24 - expensive_hours_var
        |int] > states(grid_area_var)|float }}'
    sequence: !input cheap
  - conditions:
    - condition: template
      value_template: '{{ (state_attr(grid_area_var,''today'')|sort)[24 - expensive_hours_var
        |int] < states(grid_area_var)|float }}'
    sequence: !input expensive
  default: []
